<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
<context:annotation-config/><!-- 자동주입 할때 필요함 -->
<context:component-scan base-package="spring"/><!--annotation을 이용하는 법: bean을 자동으로 스캔하는 스캐너 역할을 한다. 즉 component 바코드를 읽을 수있는 스캐너 선언 -->

<!--<bean id="memberDao" class="spring.MemberDao"></bean> --><!-- 인스턴스생성 --><!-- annotation을 이용하므로써 이부분 인스턴스 선언안해줘도된다. -->
<!--<bean id="memberPrinter" class="spring.MemberPrinter"></bean> --><!-- 인스턴스생성 --><!-- 빈 스캐너를 통해 인식을 자동으로 하기때문이다. -->

<bean id="regSvc" class="spring.MemberRegisterService"><!--MemberRegisterService 인스턴스생성-->
	<!--<constructor-arg ref="memberDao"></constructor-arg> --><!-- 여기서 생성자로 주입을 해줘야하기때문에 주입을 위해서 필요한 코드이다. 즉, 생성자는 constructor-arg -->
</bean>

<bean id="pwdSvc" class="spring.ChangePasswordService">
	<!--<constructor-arg ref="memberDao"></constructor-arg> --><!--자동 주입을 위한 어노테이션 즉,@Autowired 사용으로 생략 가능 (정확한건아님)  -->
</bean>
<bean id="listPrinter" class="spring.MemberListPrinterService">
	<!--<constructor-arg ref="memberDao"></constructor-arg> -->
	<!--<constructor-arg ref="memberPrinter"></constructor-arg> -->
</bean>
<bean id="infoPrinter" class="spring.MemberInfoPrinter"><!--MemberInfoPrinter의 인스턴스 생성  -->
	<!--<property name="memberDao" ref="memberDao"></property>--><!--자동 주입을 위한 어노테이션을 통해 코드를 간략화 해보았다 정확한건아님...-->
	<!--<property name="printer" ref="memberPrinter"></property> --><!-- MemberInfoPrinter클래스 에보면 코드도 간략화됨 -->
</bean>
</beans>
